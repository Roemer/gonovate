{
    "platform": "noop",
    "platformSettings": {
        "inplace": true
    },
    "extends": [
        "defaults"
    ],
    "managers": [
        {
            "id": "dockerfile",
            "type": "regex",
            "managerSettings": {
                "filePatterns": [
                    "**/[Dd]ockerfile"
                ],
                "matchStrings": [
                    "(?m)^FROM alpine:(?P<version>.*) # (?P<datasource>.*?)\/(?P<dependencyName>.*?)\\s*$",
                    "(?m)^ENV .*?_VERSION=(?P<version>.*) # (?P<datasource>.*?)\/(?P<dependencyName>.*?)\\s*$"
                ]
            },
            "dependencySettings": {
                "maxUpdateType": "major",
                "ignoreNonMatching": true
            }
        }
    ],
    "rules": [
        {
            "matches": {
                "dependencyNames": [
                    "lodash"
                ]
            },
            "dependencySettings": {
                "postUpgradeReplacements": [
                    "(?m)^.*\"Lodash Hash:[[:blank:]]*(?P<sha512>.+)\".*$"
                ]
            }
        },
        {
            "matches": {
                "dependencyNames": [
                    "alpine"
                ]
            },
            "dependencySettings": {
                "maxUpdateType": "minor"
            }
        }
    ]
}