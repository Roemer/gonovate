{
	"name": "gonovate-dev",
	"initializeCommand": {
		"user-env": "touch ${localWorkspaceFolder}/.devcontainer/.env"
	},
	"dockerFile": "Dockerfile",
	"runArgs": [
		"--env-file=./.devcontainer/.env"
	],
	"features": {
		// gonovate: { "datasource":"docker", "matchstring":"(?m)^\\s*\"(?P<packageName>.*):(?P<version>.*)\".*$" }
		"ghcr.io/devcontainers/features/go:1.3": {
			// gonovate: { "datasource":"go-version", "packageName":"stable", "matchstring":"(?m)^\\s*\"version\":\\s*\"(?P<version>.*)\".*$" }
			"version": "1.22.3"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"roemer.gotaskr-vscode"
			]
		}
	}
}