{
	"name": "gonovate-dev",
	"initializeCommand": {
		"user-env": "touch ${localWorkspaceFolder}/.devcontainer/.env"
	},
	"build": {
		"dockerfile": "Dockerfile",
		"options": [
			"--add-host=host.docker.internal:host-gateway"
		]
	},
	"runArgs": [
		"--add-host=host.docker.internal:host-gateway",
		"--env-file=./.devcontainer/.env"
	],
	"containerEnv": {
		"GOMODCACHE": "${containerWorkspaceFolder}/.go_cache"
	},
	"features": {
		"ghcr.io/postfinance/devcontainer-features/go:0.2.0": {
			"version": "1.24.1"
		}
	},
	"customizations": {
		"vscode": {
			"extensions": [
				"roemer.gotaskr-vscode"
			]
		}
	}
}