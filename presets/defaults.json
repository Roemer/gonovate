{
    "platformSettings": {
        "baseBranch": "main",
        "gitAuthor": "gonovate-bot <bot@gonovate.org>"
    },
    "ignorePatterns": [
        "**/node_modules",
        "**/bower_components",
        "**/.git"
    ],
    "matchStringPresets": {
        "docker-image-in-quotes": {
            "matchString": "(?m)^\\s*\"(?P<packageName>.*):(?P<version>.*)\".*$"
        },
        "docker-image-from": {
            "matchString": "(?m)^FROM (?P<packageName>.*):(?P<version>.*)\\s*$"
        },
        "json-version": {
            "matchString": "(?m)^\\s*\"%s\":\\s*\"(?P<version>.*)\".*$",
            "parameterDefaults": [
                "version"
            ]
        }
    },
    "rules": [
        {
            "packageSettings": {
                "maxUpdateType": "minor",
                "versioning": "(\\d+)(?:\\.(\\d+))?(?:\\.(\\d+))?"
            }
        },
        {
            "matches": {
                "datasources": [
                    "maven"
                ]
            },
            "packageSettings": {
                "versioning": "^(?P<d1>\\d+)\\.(?P<d2>\\d+)(?:\\.(?P<d3>\\d+))?(?:-(?P<s4>[^-]+))?(?:-(?P<d5>\\d+))?$"
            }
        },
        {
            "matches": {
                "datasources": [
                    "nodejs"
                ]
            },
            "packageSettings": {
                "extractVersion": "v(.*)",
                "versioning": "^(\\d+)(?:\\.(\\d+))?(?:\\.(\\d+))?$"
            }
        },
        {
            "matches": {
                "datasources": [
                    "npm"
                ]
            },
            "packageSettings": {
                "versioning": "^(\\d+)\\.(\\d+)\\.(\\d+)(?:-(.+?))?(?:[-\\.](\\d+))?(?:[-\\.](\\d+))?$"
            }
        },
        {
            "matches": {
                "datasources": [
                    "go-version"
                ]
            },
            "packageSettings": {
                "extractVersion": "go(.*)",
                "versioning": "(\\d+)(?:\\.(\\d+))?(?:\\.(\\d+))?(?:([a-z]+)(\\d+)?)?$"
            }
        }
    ]
}