{
    "platform": "gitlab",
    "extends": [
        "defaults"
    ],
    "ignorePatterns": [
        "**/node_modules",
        "**/bower_components",
        "**/.git"
    ],
    "managers": [
        {
            "id": "devcontainer-json",
            "type": "inline",
            "managerSettings":{
                "filePatterns": [
                    ".devcontainer/Dockerfile",
                    ".devcontainer/devcontainer.json"
                ]
            },
            "packageSettings": {
                "ignoreNonMatching": true
            }
        },
        {
            "id": "dockerfile-versions",
            "type": "regex",
            "managerSettings": {
                "filePatterns": [
                    "**/[Dd]ockerfile"
                ],
                "matchStrings": [
                    "^ENV .*?_VERSION=(?P<version>.*) # (?P<datasource>.*?)\/(?P<package>.*?)[[:blank:]]*$"
                ]
            },
            "packageSettings": {
                "maxUpdateType": "major"
            }
        }
    ],
    "rules": [
        {
            "matches": {
                "managers": [
                    "dockerfile-versions"
                ]
            },
            "managerSettings": {
                "filePatterns": [
                    "**/my.[Dd]ockerfile"
                ]
            }
        },
        {
            "matches": {
                "files": [
                    "**/my.[Dd]ockerfile"
                ]
            },
            "packageSettings": {
                "maxUpdateType": "patch"
            }
        }
    ]
}